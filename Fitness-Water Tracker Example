Fitness-Water Tracker Example 

Note: It will be developed


import React, { useState } from 'react';
import {View, Text, TextInput, StyleSheet, Pressable, SafeAreaView,} from 'react-native';


const WaterTracker = () => {
  const [drank, setDrank] = useState('');
  const [goals, setGoals] = useState('');
  const [entries, setEntries] = useState([]);

  const handleSubmit = () => {
    if (!drank || !goals) return;

    const newEntry = {
      id: entries.length + 1,
      drankText: `${drank} ml`,
      goalText: `${goals} ml`,
      currentDate: new Date().toLocaleString(),
    };

    setEntries((prevEntries) => [...prevEntries, newEntry]);
    setDrank('');
    setGoals('');
  };


  return (
    <SafeAreaView style={styles.form}>
      <View>
        <Text style={styles.label}>Today you drank:</Text>
        <TextInput
          style={styles.input}
          placeholder="The water amount you drank today"
          value={drank}
          onChangeText={setDrank}
          keyboardType="numeric"
        />
      </View>

      <View>
        <Text style={styles.label}>Today's Goal:</Text>
        <TextInput
          style={styles.input}
          placeholder="Your daily water goal"
          value={goals}
          onChangeText={setGoals}
          keyboardType="numeric"
        />
      </View>

      <Pressable onPress={handleSubmit} style={styles.submitButton}>
        <Text style={styles.buttonText}>Submit</Text>
      </Pressable>

      <View style={styles.cardContainer}>
        {entries.map((entry) => (
          <View key={entry.id} style={styles.entryRow}>
            <Text style={styles.drankText}>{entry.drankText}</Text>
            <Text style={styles.goalText}>{entry.goalText}</Text>
            <Text style={styles.dateText}>{entry.currentDate}</Text>
          </View>
        ))}
      </View>
      
    </SafeAreaView>
  );
};

const styles = StyleSheet.create({
  form: {
    alignItems: 'center',
    backgroundColor: '#1E2D3D',
    padding: 20,
    borderRadius: 10,
    flex: 1,
  },
  label: {
    color: '#9B59B6',
    fontWeight: 'bold',
    marginTop: 10,
    fontSize: 16,
  },
  input: {
    borderWidth: 1,
    padding: 10,
    borderRadius: 60,
    width: 250,
    borderColor: '#8D6E63',
    backgroundColor: '#5C6B7D',
    marginTop: 5,
    color: '#FFFFFF',
    fontWeight: 'bold',
  },
  submitButton: {
    backgroundColor: '#A1887F',
    paddingVertical: 12,
    paddingHorizontal: 20,
    borderRadius: 30,
    marginTop: 20,
    width: 140,
    alignItems: 'center',
  },
  buttonText: {
    color: '#FFF',
    fontWeight: 'bold',
    textAlign: 'center',
  },
  cardContainer: {
    marginTop: 20,
    padding: 15,
    backgroundColor: '#3A4D5E',
    borderRadius: 10,
    borderWidth: 1,
    borderColor: '#B0B0B0',
    width: '100%',
    alignItems: 'center',
  },
  entryRow: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    width: '100%',
    paddingVertical: 5,
    borderBottomWidth: 1,
    borderBottomColor: '#555',
  },
  drankText: {
    color: '#EAEAEA',
    fontWeight: 'bold',
    flex: 1,
  },
  goalText: {
    color: '#C0A8B3',
    fontWeight: 'bold',
    flex: 1,
  },
  dateText: {
    color: '#9B9B9B',
    fontWeight: 'bold',
    flex: 1,
  },
});

export default WaterTracker;

